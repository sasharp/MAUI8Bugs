<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI8Bugs.MainPage"
             xmlns:controls="clr-namespace:MAUI8Bugs">
    <Shell.SearchHandler>
        <controls:CustomSearchHandler Placeholder="Enter search term"
                                      ShowsResults="true"
                                      DisplayMemberName="Name" />
    </Shell.SearchHandler>
    <StackLayout>
        <Button Text="Go to SubPage >" Clicked="Button_Clicked" WidthRequest="500"></Button>
    <CollectionView x:Name="collectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10">
                    <Border>
                        <VerticalStackLayout BackgroundColor="Aqua">
                            <Label Grid.Column="1"
                       Text="{Binding Name}"
                       FontAttributes="Bold" />
                       <Line HeightRequest="5"/>
                                <Label Grid.Row="1"
                       Grid.Column="1"
                       Text="↑↑↑ the line is not showing here ↑↑↑"
                       VerticalOptions="End" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    </StackLayout>
</ContentPage>
